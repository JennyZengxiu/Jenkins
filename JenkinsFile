node{
    def gradleHome = tool 'Gradle 4.8.1'
    env.PATH = "${gradleHome}/bin:${env.PATH}"
}
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'gradlew build --info'
            }
        }
        stage('Test') {
            steps {
                sh 'gradlew test --info'
            }
        }
    }
}
